set $mod Mod4

# gaps
gaps outer 0
gaps inner 12

# lock
exec --no-startup-id xautolock -time 1 -locker "i3lock -c 000000 --no-unlock-indicator"
bindsym $mod+Escape exec i3lock -c 000000 --no-unlock-indicator

# no frames
default_border none

# bar 
bar {
  status_command i3blocks
  position bottom
  font pango: JetBrainsMono Nerd Font Mono 12
  i3bar_command i3bar --transparency
  colors {
    statusline #444444
    background #0A0A0ACC
    separator #0A0A0ACC
    focused_workspace #0A0A0ACC #0A0A0ACC #DEEEED
    inactive_workspace #0A0A0ACC #0A0A0ACC #444444
  }
}

# start programs
exec_always --no-startup-id feh --bg-scale ~/dotfiles/extras/wall/mountain.jpg
exec_always --no-startup-id picom 
exec --no-startup-id /usr/bin/setxkbmap -option "ctrl:nocaps"
bindsym $mod+Return exec kitty
bindsym $mod+space exec rofi -show drun

# music
bindsym $mod+p exec playerctl play-pause
bindsym $mod+s exec playerctl next

# laptop
exec --no-startup-id xinput --set-prop 10 "libinput Accel Speed" 0.7
exec --no-startup-id xinput set-prop 10 "libinput Natural Scrolling Enabled" 1
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioMute exec amixer set Master toggle

# kill program
bindsym $mod+q kill

# restart
bindsym $mod+Shift+r restart

# workspaces 
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

# move container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5

# focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# resize
bindsym $mod+minus resize shrink width 50 px
bindsym $mod+equal resize grow width 50 px

# floating
bindsym $mod+Shift+space floating toggle
floating_modifier $mod
